@using PagedList.Mvc
@model PagedList.IPagedList<Pylon.BL.ProductDTO>

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
	<link rel="stylesheet" href="/css/bootstrap.css" />
</head>

@using (Html.BeginForm("AddProduct", "Product", FormMethod.Get))
{
	<p><input type="submit" class="rent-btn" value="AddCar" style="margin-bottom:10px; margin-left:15px" /></p>
}

<div class="container">
	<div class="row">
		<div class="col-lg-12">
			@foreach (var product in Model)
			{
				<div class="car-list-content m-t-50">

					<!-- Single Car Start -->
					<div class="single-car-wrap">
						<div class="row">
							<!-- Single Car Thumbnail -->


							<div class="col-lg-4">
								@if (product.ImageMimeType != null)
								{
									<div>
										<img src="@Url.Action("GetImage", "Product", new { product.Id })" />
									</div>
								}
								else
								{
									<div>
										<img src="/assets/img/no-image-product.jpg" />
									</div>
								}
							</div>
							<!-- Single Car Thumbnail -->
							<!-- Single Car Info -->
							<div class="col-lg-6">
								<div class="col-lg-5">
									<div class="display-table">
										<div class="display-table-cell">
											<div class="car-list-info">
												<h2>@product.Name @product.Model</h2>
												<h4>@product.Year</h4>
												<h5>@product.Price.ToString("c")</h5>
											</div>
											<br>
										</div>
									</div>
								</div>
							</div>
							<div class="col-lg-2">
								@using (Html.BeginForm("GetProduct", "Product", FormMethod.Get))
								{
									@Html.Hidden("id", product.Id)
									<p><input type="submit" class="rent-btn" value="Edit" style="min-width:120px" /></p>
								}
								<br>
								@using (Html.BeginForm("RemoveProduct", "Product"))
								{
									@Html.Hidden("id", product.Id)
									<p><input type="submit" class="rent-btn" value="Remove" style="min-width:120px" /></p>
								}
							</div>
							<!-- Single Car info -->
						</div>
					</div>
				</div>
				<br>
			}
		</div>

	</div>
</div>

<br />
	Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount

	@Html.PagedListPager(Model, page => Url.Action("GetSalerProducts", new { page }))

