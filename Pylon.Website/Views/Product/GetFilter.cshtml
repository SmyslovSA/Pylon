@model Pylon.Models.ProductFilterModel
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
</head>
@using (Html.BeginForm("GetFilter", "Product", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
	@Html.AntiForgeryToken()
	<div class="login-page-content">
		<div class="login-form">
			<div class="username">
				@Html.TextBoxFor(m => m.Name, new { @placeholder = @Resources.Resource.Car })
			</div>
			<div class="username">
				@Html.TextBoxFor(m => m.CarModel, new { @placeholder = @Resources.Resource.Model })
			</div>
			<div class="username">
				@Html.TextBoxFor(m => m.MinYear, new { @id = "datepicker", @autocomplete = "off", @placeholder = @Resources.Resource.StartYear })
			</div>
			<div class="username">
				@Html.TextBoxFor(m => m.MaxYear, new { @id = "datepicker2", @autocomplete = "off", @placeholder = @Resources.Resource.EndYear })
			</div>
			<div class="username">
				@Html.TextBoxFor(m => m.MinPrice, new { @onkeypress = "validate(event)", @placeholder = @Resources.Resource.MinPrice })
			</div>
			<div class="username">
				@Html.TextBoxFor(m => m.MaxPrice, new { @onkeypress = "validate(event)", @placeholder = @Resources.Resource.MaxPrice })
			</div>
			<div class="log-btn">
				<button> @Resources.Resource.Search </button>

			</div>
		</div>
	</div>
}
@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/jquery.maskedinput.js"></script>
<script>
	$("#datepicker").mask("9999", { placeholder: "yyyy" });
</script>

<script>
	$("#datepicker2").mask("9999", { placeholder: "yyyy" });
</script>
