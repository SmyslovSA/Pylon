@using Pylon.Website.Extension
@model Pylon.Models.OrderFilterModel

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
</head>
@using (Html.BeginForm("GetFilter", "Order", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
	@Html.AntiForgeryToken()
	<div class="login-page-content">
		<div class="login-form">
			<input type="hidden" value=@User.GetUserId() name="userId" />
			<div class="username">
				@Html.TextBoxFor(m => m.ProductName, new { @placeholder = @Resources.Resource.Car })
			</div>
			<div class="username">
				@Html.TextBoxFor(m => m.ProductModel, new { @placeholder = @Resources.Resource.Model })
			</div>
			<div class="username">
				<input type="text" id="datepicker3" class="datepickerFilterOrder" name="startDate" autocomplete="off" placeholder="@Resources.Resource.StartDate" />
			</div>
			<div class="username">
				<input type="text" id="datepicker4" name="endDate" class="datepickerFilterOrder" autocomplete="off" placeholder="@Resources.Resource.EndDate" />
			</div>
			<div class="log-btn">
				<button> @Resources.Resource.Search </button>
			</div>
		</div>
	</div>
}
@Scripts.Render("~/bundles/jquery")
<script src="~/Scripts/jquery.maskedinput.js"></script>
<script>
	$(function () {
		$('.datepickerFilterOrder').each(function () {
			$(this).mask("99/99/9999", { placeholder: "dd/mm/yyyy" });
		});
	});
</script>