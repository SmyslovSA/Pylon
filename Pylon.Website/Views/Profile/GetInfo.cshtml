@model Pylon.Models.ProfileViewModel

<div class="col-lg-12">
	<div class="row">
		<!-- Profile Avatar -->
		<div class="col-lg-4">
			<div>
				<img src="@Url.Action("GetImage", "Product", new { Id = 1 })" />
			</div>
		</div>
		<!-- Profile Avatar -->
		<!-- Profile Info -->
		<div class="col-lg-8">
			@using (Html.BeginForm("GhangePersonalData", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
			{
				@Html.AntiForgeryToken()
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				<div class="container">
					<div class="row">
						<div class="col-lg-7 col-md-8 m-auto">
							<div class="login-page-content">
								<div class="login-form">
									<h3>Personal Data</h3>
									<form action="index.html">
										<div class="username">
											@Html.TextBoxFor(m => m.FirstName, new { @placeholder = "Name", @value = Model.FirstName, @autocomplete = "off" })
											@Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger" })
										</div>
										<div class="username">
											@Html.TextBoxFor(m => m.LastName, new { @placeholder = "Last Name", @value = Model.LastName, @autocomplete = "off" })
											@Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger" })
										</div>
										<div>
											@Html.TextBoxFor(m => m.Phone, new { @placeholder = "Phone", @value = Model.Phone , @autocomplete = "off" })
											@Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
										</div>
										<div class="log-btn">
											<button> Change Personal Data </button>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			}
			@using (Html.BeginForm("GhangePassword", "Profile", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
			{
				@Html.AntiForgeryToken()
				@Html.ValidationSummary(true, "", new { @class = "text-danger" })
				<div class="container">
					<div class="row">
						<div class="col-lg-7 col-md-8 m-auto">
							<div class="login-page-content">
								<div class="login-form">
									<h3>Change Password</h3>
									<form action="index.html">
										<div class="password">
											<input type="password" name="newPassword">
										</div>
										<div class="password">
											<input type="password" name="newPasswordConfirm">
										</div>
										<div class="log-btn">
											<button> Change Password </button>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>
				</div>
			}
		</div>
		<!--Profile info -->
	</div>
	<br>
</div>



